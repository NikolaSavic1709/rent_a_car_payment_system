# PayPal Payment Microservice Environment Configuration

# Server Configuration
PORT=8080

# Database Configuration
DB_HOST=psql_paypal
DB_PORT=5432
DB_USER=paypal_user
DB_PASSWORD=paypal_password
DB_NAME=paypal_db

# PayPal API Configuration
# Get these from: https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_SECRET=your-paypal-secret-here
PAYPAL_MODE=sandbox

# Callback URLs
PSP_CALLBACK_URL=http://psp_service:8080/payment-callback

# PayPal Return URLs (where PayPal redirects after payment)
PAYPAL_RETURN_URL=http://localhost:8087/payment-success
PAYPAL_CANCEL_URL=http://localhost:8087/payment-cancel

# Frontend Redirect URLs (where service redirects user after processing)
SUCCESS_URL=http://localhost:3001/paypal?status=success
CANCEL_URL=http://localhost:3001/paypal?status=cancel
